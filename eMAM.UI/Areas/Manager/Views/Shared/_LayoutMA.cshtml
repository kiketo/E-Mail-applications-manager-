<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/toastr.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-2">
        <div class="container">
            <a class="navbar-brand" asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Users">eMAM - Manager Area</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartialMA" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="Manager" asp-controller="Dashboard" asp-action="Users">Users</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.ToString("g") TeamX &copy;</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js" integrity=""></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" integrity=""></script>
    <script src="~/js/toastr.js"></script>
    <script src="~/js/site.js" integrity="" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

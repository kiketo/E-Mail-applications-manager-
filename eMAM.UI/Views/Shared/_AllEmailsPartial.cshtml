@model EmailViewModel

<td>@Model.Id</td>
<td hidden data-gmailIdNumber="@Model.GmailIdNumber">@Model.GmailIdNumber</td>
<td>@Model.DateReceived</td>
<td>@Model.Sender.SenderName &lt@(Model.Sender.SenderEmail)&gt</td>
<td>@Model.Subject</td>
<td data-label="status">@Model.Status.Text</td>
<td data-label="areAttachments">
    @if (Model.AreAttachments)
    {<img src="~/images/attachment.png" height="42" width="42">}
</td>

@if (Model.Status.Text == "Not Reviewed" || Model.Status.Text == "Invalid Application")
{
    if (Model.Status.Text == "Not Reviewed" || Model.UserIsManager)
    {
        <td data-label="previewModal">
            <!-- Preview Modal -->
            <!-- Button to Open the Modal -->
            @if (Model.UserIsManager)
            {
                <button type="button" class="email-button btn btn-success" data-isManager=@Model.UserIsManager data-toggle="modal" data-target="#mails-@Model.GmailIdNumber" data-url="/home/previewmail">
                    <img src="~/images/preview.png" height="30" width="30">
                </button>
            }
            else if (Model.Status.Text == "Not Reviewed")
            {
                <button type="button" class="email-button btn btn-success" data-toggle="modal" data-target="#mails-@Model.GmailIdNumber" data-url="/home/previewmail">
                    <img src="~/images/preview.png" height="30" width="30">
                </button>
            }

            <!-- The Modal -->
            <div class="modal fade bootstrap-modal" id="mails-@Model.GmailIdNumber" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width:100%">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h6 class="modal-title">@Model.Sender.SenderName, @Model.Sender.SenderEmail</h6>
                            <button type="button" class="close close-button" data-dismiss="modal" data-target="@Model.GmailIdNumber">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">

                            <div class="row">
                                <div class="col-sm-9" style="background-color:lavender;">
                                    <p><h7>Subject: <r style="font-weight:bold">@Model.Subject</r></h7></p>
                                    <p><h7>Date/Time received in the mail: <r style="font-weight:bold">@Model.DateReceived</r></h7></p>
                                    <p>
                                        <h7>
                                            Date/Time of initial registration within the system:
                                            <r style="font-weight:bold">@Model.InitialRegistrationInSystemOn</r>
                                        </h7>
                                    </p>
                                    <p>
                                        <h7>
                                            <r style="font-weight:bold">@Model.Attachments.Count</r> attachment/s, total size:
                                            <r style="font-weight:bold">@Model.Attachments.Sum(x => x.FileSizeInMb).ToString("0.00")</r> MB
                                        </h7>
                                    </p>
                                    <p><h7>Subject: <r style="font-weight:bold">@Model.Subject</r></h7></p>
                                    <div class="mail-body" style="width: 100%; height:300px; overflow-y:scroll;">
                                        <img src="/images/ajax-loader.gif" class="loading-indicator" style="height:150px" />
                                    </div>
                                </div>
                                <div class="col-sm-3" style="background-color:lavender;">
                                    <div style="">
                                        <p></p>
                                        <button type="button" data-dismiss="modal" style="width:160px" class="btn btn-success validation-button" data-messageId="@Model.GmailIdNumber" data-url="/home/validatemail">Valid</button>
                                        <p></p>
                                        <p></p>
                                        <button type="button" data-dismiss="modal" style="width:160px" class="btn btn-danger notValid-button" data-messageId="@Model.GmailIdNumber" data-url="/home/notvalidmail">Not Valid</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </td>
    }
    else
    {
        <td></td>
    }
}
else
if (Model.Status.Text == "New" || /*Model.Status.Text == "Open" && Model.OpenedBy.UserName == User.Identity.Name ||*/ Model.UserIsManager)
{
    <td data-label="processModal">

        <!-- Process Modal -->
        <!-- Button to Open the Modal -->
        <button type="button" class="process-button btn btn-success" data-isManager=@Model.UserIsManager data-toggle="modal" data-target="#mails-@Model.GmailIdNumber">
            <img src="~/images/process.png" height="30" width="30">
        </button>
        <!-- The Modal -->
        <div class="modal fade bootstrap-modal" id="mails-@Model.GmailIdNumber" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header" style="cursor:default">
                        <h6 class="modal-title">@Model.Sender.SenderName, @Model.Sender.SenderEmail</h6>
                        <button type="button" class="close close-button-open" data-dismiss="modal" data-target="@Model.GmailIdNumber">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body " data-backdrop="true" style="cursor:default">
                        <div class="row">
                            <div class="col-sm-9" style="background-color:lavender;">
                                <p><strong>Subject: </strong><r>@Model.Subject</r></p>
                                <p><strong>Received At: </strong> <r>@Model.DateReceived</r></p>
                                <p>
                                    <r style="font-weight:bold">@Model.Attachments.Count</r> attachment/s, total size:
                                    <r style="font-weight:bold">@Model.Attachments.Sum(x => x.FileSizeInMb).ToString("0.00")</r> MB
                                </p>
                                <div class="mail-bodyDB" style="width: 100%; height:300px; overflow-y:scroll;">
                                    <img src="/images/ajax-loader.gif" class="loading-indicator" style="height:150px" />
                                </div>
                            </div>
                            <div class="col-sm-3" style="background-color:antiquewhite;">
                                <form class="customer-form" action="/" method="post">

                                    <input asp-for="@Model.GmailIdNumber" type="hidden" name="gmid" id="gmailid" class="form-control" />
                                    <label>Personal Identification Number:</label>
                                    <input asp-for="@Model.CustomerEGN " placeholder="Personal Identification Number" name="egn" id="egn" type="text" class="form-control" />
                                    <label>Phone Number:</label>
                                    <input asp-for="@Model.CustomerPhoneNumber " placeholder="Phone Number" id="phone" name="phone" type="text" class="form-control" />

                                    <button type="submit" style="width:160px" value="Submit" class="btn btn-success close-application customer-form" formmethod="post" data-url="/home/submitncloseapplication">Submit&Close</button>
                                </form>
                                <br />
                                <div style="">
                                    <button type="button" data-dismiss="modal" style="width:160px" class="btn btn-danger notValid-button" data-messageId="@Model.GmailIdNumber" data-url="/home/notvalidmail">Cancel</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </td>
}
else
{
    <td></td>
}

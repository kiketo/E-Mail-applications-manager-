@model EmailViewModel

<h3>All Mails</h3>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Attachments</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mail in Model.SearchResults)
        {
            if (mail.Status.Text == "Not Reviewed" || mail.Status.Text == "Invalid Application")
            {

                <partial name="_previewEmail" model="mail" />

            }
            else if (mail.Status.Text == "Rejected" || mail.Status.Text == "Aproved")
            {
                <partial name="_closed" model="mail" />
            }
            else
            {
                <partial name="_emailOpen" model="mail" />
            }
        }
    </tbody>

</table>



@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="ListAllMails"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="ListAllMails"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>



<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

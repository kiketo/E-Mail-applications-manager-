@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<p>Last 5 Opened</p>

<table class="table-hover" style="width:100%">
    <thead class="thead-light" style="background-color: cadetblue">
        <tr>
            <th>ID</th>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Open since</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Opened by</th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var mail in Model.Open)
        {
        <tr>
            <partial name="_emailOpen.cshtml" model="mail" />
        </tr>
    }

        </tbody>
    </table>



<p>Last 5 with status New</p>
<table class="table-hover" style="width:100%">
    <thead class="thead-light" style="background-color: cadetblue">
        <tr>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var mail in Model.New)
        {
            <partial name="_emailOpen" model="mail" />
        }

    </tbody>
</table>

<p>Last 5 with status Not Reviewed</p>
<table class="table-hover" style="width:100%">
    <thead class="thead-light" style="background-color: cadetblue">
        <tr>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var mail in Model.NotReviewed)
        {
            <partial name="_previewEmail" model="mail" />
        }

    </tbody>
</table>

<p>Last 5 with Closed</p>
<table class="table-hover" style="width:100%">
    <thead class="thead-light" style="background-color: cadetblue">
        <tr>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var mail in Model.Closed)
        {
            <partial name="_emailHome" model="mail" />
        }

    </tbody>
</table>




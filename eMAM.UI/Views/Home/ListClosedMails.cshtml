@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}
@model EmailViewModel

<h3 style="display:inline">Closed Mails</h3>

@if (Model.UserIsManager)
{
    <form asp-action="ListClosedMails" method="post" style="display:inline; float:right">
        <div class="form-actions no-color">
            <input list="users" name="selectedUser" value="@Model.FilterByUser">
            <datalist id="users">
                @foreach (var user in Model.UserNames)
                {
                    <option value="@user"></option>
                }
            </datalist>
            <input type="submit" value="Filter by user" class="btn btn-success">
        </div>
    </form>
    <form asp-action="ListClosedMails" method="post" style="display:inline; float:right">
        <div class="form-actions no-color">
            <p>
                @if (Model.FilterClosedStatus == "Rejected Only")
                {
                    <input type="checkbox" name="filterStatus" value="All Closed" checked hidden />
                    <input type="submit" value="All Closed" class="btn btn-outline-success" />
                    <a asp-action="" class="btn btn-success disabled">Rejected Only</a>
                    <input type="checkbox" name="filterStatus" value="Aproved Only" checked hidden />
                    <input type="submit" value="Aproved Only" class="btn btn-outline-success" />
                }
                else if (Model.FilterClosedStatus == "Aproved Only")
                {
                    <a asp-action="" class="btn btn-success disabled">All Closed</a>
                    <input type="checkbox" name="filterStatus" value="Rejected Only" checked hidden />
                    <input type="submit" value="Rejected Only" class="btn btn-outline-success" />
                    <input type="checkbox" name="filterStatus" value="Aproved Only" checked hidden />
                    <input type="submit" value="Aproved Only" class="btn btn-outline-success" />
                }
                else
                {
                    <input type="checkbox" name="filterStatus" value="All Closed" checked hidden />
                    <input type="submit" value="All Closed" class="btn btn-outline-success" />
                    <input type="checkbox" name="filterStatus" value="Rejected Only" checked hidden />
                    <input type="submit" value="Rejected Only" class="btn btn-outline-success" />
                    <a asp-action="" class="btn btn-success disabled">Aproved Only</a>

                }
            </p>
        </div>
    </form>

}

<table class="table-hover" style="width:100%">
    <thead class="thead-light" style="background-color: cadetblue">
        <tr>
            <th>ID</th>
            <th hidden>GmailID</th>
            <th>Date/Time</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Status</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Closed by</th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var mail in Model.SearchResults)
        {
            mail.UserIsManager = Model.UserIsManager;
            <tr class="row-@mail.GmailIdNumber">
                <partial name="_AllClosedEmailsPartial" model="mail" />
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="ListClosedMails"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@Model.FilterOnlyNotValid"
   class="btn btn-success @prevDisabled">
    Previous
</a>
<a asp-action="ListClosedMails"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@Model.FilterOnlyNotValid"
   class="btn btn-success @nextDisabled">
    Next
</a>
